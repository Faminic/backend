div.container
    div.row
        div.col-md
            h1 #{title}
            div(id="facility-carousel" class="carousel slide" data-ride="carousel")
                div.carousel-inner
                    each image, index in images
                        if (index==0)
                            div(class="carousel-item active")
                                img(class="d-block w-100" src=image)
                        else
                            div(class="carousel-item")
                                img(class="d-block w-100" src=image)
                a(class="carousel-control-prev" href="#facility-carousel" role="button" data-slide="prev")
                    span(class="carousel-control-prev-icon" aria-hidden="true")
                    span(class="sr-only">Previous)
                a(class="carousel-control-next" href="#facility-carousel" role="button" data-slide="next")
                    span(class="carousel-control-next-icon" aria-hidden="true")
                    span(class="sr-only") Next
        div.col-md
            p
                | #{description}
            a(href="#" class="btn btn-primary btn-lg active" role="button")
                | book now
            if (availability)
                div
                    h3 Availability:
                    each key, val in availability
                        p!= '<strong>' + key + '</strong>' + ': ' + val
                

